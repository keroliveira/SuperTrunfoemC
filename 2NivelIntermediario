#include <stdio.h>

int main(){

    //Dados da primeira carta
    char estado1[20];
    char codigocarta1[20] = "A01";
    char nomedacidade1[20];
    int populacao1;
    float area1;
    float pib1;
    int pontosturisticos1;
    float densidadepopulacional1;
    float pibpercapta1; 
    
    //Dados da segunda carta
    char estado2[20];
    char codigocarta2[20] = "B01"; 
    char nomedacidade2[20];
    int populacao2;
    float area2;
    float pib2;
    int pontosturisticos2;
    float densidadepopulacional2; 
    float pibpercapta2;
    
    // Apresentação do jogo

    printf("**********************************************\n");
    printf("**************Super Trunfo em C***************\n");
    printf("**********************************************\n");
    
    printf("Olá, usuário! Vamos dar início ao nosso jogo?\n"); 
    printf("Você precisará incluir dados referentes a duas cidades de dois diferentes estados.\n"); 

    // Cadastro da primeira cidade

    printf("Primeiro, insira um estado do Brasil (nome sem espaço):\n");
    scanf("%s", &estado1);
    
    printf("Agora, escolha uma cidade nesse estado (nome sem espaço):\n");
    scanf("%s", &nomedacidade1);
    
    printf("Agora, informe a população dessa cidade (apenas números):\n" );
    scanf("%d", &populacao1);

    printf("Informe a sua área (apenas dois caracteres após o ponto):\n");
    scanf("%f", &area1);

    printf("Informe também seu PIB (apenas dois caracteres após o ponto):\n");
    scanf("%f", &pib1);

    printf("Estamos quase lá! Por fim, insira a quantidade de pontos turísticos da cidade escolhida:\n");
    scanf("%d", &pontosturisticos1);
    
    printf("Finalizamos a construção da primeira carta\n");

    // Apresentação da primeira carta
    
    printf("Confira sua primeira carta!\n");
    printf("-------------------\n");
    printf("|Estado:%s\n", estado1);
    printf("|Cidade: %s\n", nomedacidade1);
    printf("|População: %d\n", populacao1);
    printf("|Area: %2.f\n", area1);
    printf("|PIB: %2.f\n", pib1);
    printf("|Pontos Turísticos: %d\n", pontosturisticos1);
    densidadepopulacional1 = populacao1 / area1;
    printf("|Densidade Populacional: %f\n", densidadepopulacional1);
    pibpercapta1 = pib1 / populacao1;
    printf("|PIB per capta: %f\n", pibpercapta1);
    printf("-------------------\n");

    // Cadastro da segunda cidade
   
    printf("Vamos a segunda carta!");
    printf("Insira outro estado do Brasil (nome sem espaço):\n");
    scanf("%s", &estado2);

    printf("Agora, escolha uma cidade nesse estado (nome sem espaço):\n");
    scanf("%s", &nomedacidade2);

    printf("Vamos continuar! Informe a população dessa cidade (apenas números):\n");
    scanf("%d", &populacao2);

    printf("Informe a sua área (apenas dois caracteres após o ponto):\n");
    scanf("%f", &area2);

    printf("Informe também seu PIB (apenas dois caracteres após o ponto):\n");
    scanf("%f", &pib2);

    printf("Estamos quase lá! Por fim, insira a quantidade de pontos turísticos da cidade escolhida:\n");
    scanf("%d", &pontosturisticos2);
 
    // Apresentação da segunda carta

    printf("Confira sua segunda carta!\n");
    printf("-------------------\n");
    printf("|Estado:%s\n", estado2);
    printf("|Cidade: %s\n", nomedacidade2);
    printf("|População: %d\n", populacao2);
    printf("|Area: %2.f\n", area2);
    printf("|PIB: %2.f\n", pib2);
    printf("|Pontos Turísticos: %d\n", pontosturisticos2);
    densidadepopulacional2 = populacao2 / area2;
    printf("|Densidade Populacional: %f\n", densidadepopulacional2);
    pibpercapta2 = pib2 / populacao2;
    printf("|PIB per capta: %f\n", pibpercapta2);
    printf("-------------------");

    return 0;
    
}
